<!doctype html>
<html lang="en">

<head>
    <title>
        <%= video.title %>|
            <%= video.username %>
    </title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/css/video.css">
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
            aria-expanded="false" aria-label="Toggle navigation"></button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                    <div class="dropdown-menu" aria-labelledby="dropdownId">
                        <a class="dropdown-item" href="#">Action 1</a>
                        <a class="dropdown-item" href="#">Action 2</a>
                    </div>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="container main">
        <div class="row">
            <div class="col-md-12">
                <div class="card border-primary">
                    <video class="card-img-top" src="../public/video/video.mp4" width="100%" height="100%" controls>
                    </video>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card border-info">
                    <div class="card-body list-group-item active">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-0 overflow card-title">
                                <%= video.title %>
                            </h5>
                        </div>
                        <div>
                            <small>
                                <%= video.username %>
                            </small>
                            <small>
                                <%= video.date %>
                            </small>
                        </div>
                    </div>
                    <div class="card-body pb-0">
                        <p class="mb-0 overflow card-text">
                            <small>
                                <%= video.content %>
                            </small>
                        </p>
                    </div>
                    <hr class="m-2">
                    <div class="card-body pt-0 pb-2">
                        <div>
                            <small>播放:</small>
                            <small>
                                <%= video.plays %>
                            </small>
                            <small>评论:</small>
                            <small>
                                <%= video.comments %>
                            </small>
                            <small>硬币:</small>
                            <small>
                                <%= video.coins %>
                            </small>
                            <small>收藏:</small>
                            <small>
                                <%= video.collects %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card border-info">
                    <div class="card-body container pt-2 pb-2">
                        <div class="row">
                            <div class="col-sm-3 p-1 card border-link">
                                <a class="m-auto" href="../public/img/img.jpg">
                                    <img class="card-img" src="../public/img/img.jpg" alt="">
                                </a>
                            </div>
                            <div class="col-sm-9 p-1 card border-light">
                                <div class="card-body p-2">
                                    <p class="mb-0 card-title">
                                        <small>
                                            <%= video.username %>
                                        </small>
                                    </p>
                                    <p class="mb-0 overflow card-text">
                                        <small>
                                            <%= video.usercontent %>
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.bootcss.com/popper.js/1.12.5/umd/popper.min.js"></script>
    <script src="https://cdn.bootcss.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
</body>

</html>