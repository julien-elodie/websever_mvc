<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Master</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../public/css/bootstrap/bootstrap.min.css">
        <link rel="stylesheet" href="../public/css/master.css">
    </head>
    <body>
        <div class='container'>
            <div class='row'>
                <div class='col-md-12 m-auto'>
                    <ul class="list-group">
                        <li class="list-group-item active">视频</li>
                        <% for(var i=0; i<videos.length; i++) { %>
                            <li class="list-group-item list-group-item-action flex-column align-items-start p-2">
                                <div class="container li-container">
                                    <div class="row">
                                        <div class="col-md-3 p-1">
                                            <img class="img-fluid" src="../public/img/img.jpg" alt="">
                                        </div>
                                        <div class="col-md-9 p-1">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1 overflow"><%= videos[i].title %></h5>
                                                <small><%= videos[i].date %></small>
                                            </div>
                                            <small>up主: </small>
                                            <small><%= videos[i].username %></small>
                                            <p class="mb-1 overflow"><%= videos[i].content %></p>
                                            <small>播放: </small><small><%= videos[i].plays %></small>
                                            <small>评论: </small><small><%= videos[i].comments %></small>
                                            <small>硬币: </small><small><%= videos[i].coins %></small>
                                            <small>收藏: </small><small><%= videos[i].collects %></small>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
        <script type='text/javascript', src='../public/js/jquery-3.2.1.min.js'></script>
        <script type='text/javascript', src='../public/js/bootstrap/bootstrap.min.js'></script>
    </body>
</html>
